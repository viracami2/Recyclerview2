<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/cardview_perro"
    app:cardElevation="15dp"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="40dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/imgperro"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/images"

         />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dog_50"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_perro"
            android:text="canino"
            android:textSize="@dimen/tamaño_nombre_perro"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numero_me_gusta"
            android:text="5"
            android:textSize="@dimen/tamaño_nombre_perro"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:paddingLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dog_filled_50"
            />

            />

    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
